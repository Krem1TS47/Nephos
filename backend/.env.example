# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Deployment Stage
STAGE=dev

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your-account.region
SNOWFLAKE_USERNAME=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_DATABASE=NEPHOS
SNOWFLAKE_WAREHOUSE=NEPHOS_WH
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=ACCOUNTADMIN

# Application Configuration
LOG_LEVEL=info

# Sentinel Configuration (Health Check)
SENTINEL_CHECK_INTERVAL=300000
SENTINEL_TIMEOUT=30000
SENTINEL_MAX_RETRIES=3

# Alert Thresholds
ALERT_LATENCY_THRESHOLD_MS=5000
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_DOWNTIME_THRESHOLD_SEC=60

# DynamoDB Configuration (Auto-set by serverless.yml)
# DYNAMODB_TABLE_METRICS=nephos-metrics-dev
# DYNAMODB_TABLE_ALERTS=nephos-alerts-dev
