# ============================================
# Sentinel Function - Data Collection Lambda
# ============================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# DynamoDB Tables
DYNAMODB_TABLE_METRICS=cloudpulse-metrics-dev
DYNAMODB_TABLE_ALERTS=cloudpulse-alerts-dev
DYNAMODB_TABLE_INSTANCES=cloudpulse-instances-dev

# Vultr API Configuration
VULTR_API_KEY=*KDMQA
VULTR_API_URL=https://api.vultr.com/v2
VULTR_RATE_LIMIT=1000
VULTR_TIMEOUT=30000

# VPS Configuration (if applicable)
VPS_API_KEY=your_vps_api_key
VPS_API_URL=https://api.yourprovider.com/v1

# Third-Party Microservices
MICROSERVICES_URLS=https://service1.example.com/health,https://service2.example.com/health,https://service3.example.com/health
MICROSERVICES_TIMEOUT=10000

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=abc12345.us-east-1
SNOWFLAKE_USER=cloudpulse_user
SNOWFLAKE_PASSWORD=your_secure_password
SNOWFLAKE_DATABASE=CLOUDPULSE
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=CLOUDPULSE_ROLE

# Metrics Collection Settings
COLLECTION_INTERVAL_MINUTES=1
BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
CPU_THRESHOLD=90
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90
RESPONSE_TIME_THRESHOLD_MS=5000

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false
LOG_GROUP=/aws/lambda/cloudpulse-sentinel

# Performance
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=512

# Feature Flags
ENABLE_SNOWFLAKE_SYNC=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_METRIC_AGGREGATION=true